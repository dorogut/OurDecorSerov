<Page x:Class="OurDecorSerov.Pages.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OurDecorSerov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="AddProductPage" Background="#FFFFFF">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#BBD9B2"/>
        <TextBlock  Text="Добавление продукции" FontFamily="Gabriola" FontSize="30"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,7,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Артикул" VerticalAlignment="Top" Width="215" Height="40" FontFamily="Gabriola" FontSize="30"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,52,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Тип продукта" VerticalAlignment="Top" Width="215" Height="43" FontFamily="Gabriola" FontSize="30"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,100,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Наименование" VerticalAlignment="Top" Width="215" Height="39" FontFamily="Gabriola" FontSize="30"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,144,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Минимальная стоимость для партнера" VerticalAlignment="Top" Width="215" Height="26" FontFamily="Gabriola" FontSize="15"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,175,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Ширина рулона" VerticalAlignment="Top" Width="215" Height="42" FontFamily="Gabriola" FontSize="30"/>

        <ComboBox x:Name="CmbProductType" HorizontalAlignment="Left" Margin="240,52,0,0" Grid.Row="1" VerticalAlignment="Top" Width="494" Height="43"/>

        <TextBox x:Name="TbArcticle" HorizontalAlignment="Left" Height="40" Margin="240,7,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="494"/>
        <TextBox x:Name="TbName" HorizontalAlignment="Left" Height="39" Margin="240,100,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="494"/>
        <TextBox x:Name="TbMinCostForPartner" HorizontalAlignment="Left" Height="26" Margin="240,144,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="494"/>
        <TextBox x:Name="TbWidthRulon" HorizontalAlignment="Left" Height="42" Margin="240,175,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="494"/>

        <Button x:Name="BtnSaveProduct" Background="#2D6033" Content="Добавить продукт" HorizontalAlignment="Left" Margin="312,222,0,0" Grid.Row="1" VerticalAlignment="Top" Width="170" FontFamily="Gabriola" FontSize="20" Click="BtnSaveProduct_Click"/>


    </Grid>
</Page>
